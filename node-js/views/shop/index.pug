extends ../templates/main.pug

block styles
  link(rel="stylesheet", href="/css/add-product.css")

block content
  main
    if articles.length > 0
      .grid
        each product in articles
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src=product.imageUrl alt="A Book")
            .card__content
              h2.product__price #{product.price}$
                p.product__description #{product.description}
            .card__actions
              include ../templates/add-to-cartForm.pug
              a(href=`/products/${product.id}`).btn Details
    else
      h1 No products here yet...